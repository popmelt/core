{
  "name": "@popmelt.com/core",
  "version": "0.5.13",
  "description": "The design collaboration layer for AI coding agents",
  "license": "PolyForm-Shield-1.0.0",
  "author": "Popmelt <hello@popmelt.com> (https://popmelt.com)",
  "homepage": "https://github.com/popmelt/core",
  "bugs": {
    "url": "https://github.com/popmelt/core/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/popmelt/core.git"
  },
  "keywords": [
    "ai",
    "annotations",
    "collaboration",
    "devtools",
    "react",
    "visual-feedback"
  ],
  "bin": {
    "popmelt": "./dist/cli.mjs"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "clean": "git clean -xdf .turbo node_modules dist",
    "format": "prettier --check \"**/*.{ts,tsx}\"",
    "lint": "eslint .",
    "prepublishOnly": "pnpm run build",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./provider": {
      "source": "./src/components/PopmeltProvider.tsx",
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./server": {
      "source": "./src/server/index.ts",
      "types": "./dist/server.d.mts",
      "import": "./dist/server.mjs"
    },
    "./canvas": {
      "source": "./src/canvas/index.ts",
      "import": "./dist/canvas.mjs"
    },
    "./next": {
      "source": "./src/plugins/next.ts",
      "import": "./dist/plugin-next.mjs",
      "default": "./dist/plugin-next.mjs"
    },
    "./vite": {
      "source": "./src/plugins/vite.ts",
      "types": "./dist/plugin-vite.d.mts",
      "import": "./dist/plugin-vite.mjs",
      "default": "./dist/plugin-vite.mjs"
    },
    "./astro": {
      "source": "./src/plugins/astro.ts",
      "types": "./dist/plugin-astro.d.mts",
      "import": "./dist/plugin-astro.mjs",
      "default": "./dist/plugin-astro.mjs"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "modern-screenshot": "4.4.39"
  },
  "peerDependencies": {
    "lucide-react": ">=0.400.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {},
  "devDependencies": {
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.2",
    "eslint": "^9.24.0",
    "lucide-react": "^0.487.0",
    "prettier": "^3.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.8.3"
  }
}
